<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ReviewRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlActivated">@color/yellow_20</item>
        <item name="colorControlNormal">@color/gray_50</item>
    </style>

    <style name="StandardButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_rounded_shape</item>
    </style>
</resources>